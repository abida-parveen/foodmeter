<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_food_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">



        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Breakfast!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="@dimen/margin_setting_start"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            />



        <TextView
            android:id="@+id/tvCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Picture"
            android:paddingVertical="@dimen/margin_setting_start"
            android:paddingHorizontal="@dimen/margin_setting_start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_et_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin_setting_start"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/tvGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose From Gallery"
            android:paddingVertical="@dimen/margin_setting_start"
            android:paddingHorizontal="@dimen/margin_setting_start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_et_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin_setting_start"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/tvAddManually"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Manually"
            android:paddingVertical="@dimen/margin_setting_start"
            android:paddingHorizontal="@dimen/margin_setting_start"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_et_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/margin_setting_start"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="@dimen/margin_setting_start"
            android:textColor="@color/colorAccent"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>


