<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:right="8dp"
                android:left="8dp"/>
            <corners android:radius="3dp"/>
            <solid android:color="#037095"/>
            <stroke android:width="1dp" android:color="#037095"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <padding
                android:top="2dp"
                android:bottom="2dp"
                android:right="16dp"
                android:left="16dp"/>
            <corners android:radius="3dp"/>
            <solid android:color="@android:color/holo_blue_dark"/>
            <stroke android:width="1dp" android:color="#037095"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:right="8dp"
                android:left="8dp"/>
            <corners android:radius="3dp"/>
            <solid android:color="@android:color/holo_blue_dark"/>
            <stroke android:width="0dp" android:color="@android:color/holo_blue_dark"/>
        </shape>
    </item>
</selector>